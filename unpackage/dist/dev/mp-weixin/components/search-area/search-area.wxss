.search-top-area {
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  padding: 5rpx 30rpx 35rpx;
}
.search-top-area .search-right {
  font-size: 28rpx;
  color: #0072FE;
}
 .uni-searchbar {
  width: 620rpx;
  height: 68rpx;
  padding: 0 !important;
}
 .uni-searchbar__box {
  border-radius: 34rpx !important;
  width: 620rpx;
  height: 68rpx !important;
}
 .uniui-search:before {
  content: "";
  background: url(https://xcxcs.obs.cn-east-3.myhuaweicloud.com/images/search.png) no-repeat;
  background-size: 100%;
  width: 40rpx;
  height: 40rpx;
  display: block;
  margin: 0 10rpx 0 30rpx;
}
 .uni-searchbar__box-icon-search {
  padding: 0% !important;
}
.search-auto {
  padding: 0 30rpx;
  position: absolute;
  top: 108rpx;
  left: 0;
  right: 0;
  z-index: 10;
  background-color: #fff;
}
.search-auto .border {
  display: flex;
  flex-wrap: nowrap;
  justify-content: left;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1px solid #D9D9D8;
}
.search-auto .border .pic {
  width: 24rpx;
  height: 23rpx;
  margin-right: 20rpx;
}
.search-auto .border .txt {
  font-size: 26rpx;
  line-height: 30rpx;
  color: #020202;
}