.gashapon {
  position: fixed;
  z-index: 100;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}
.gashapon .mask {
  position: absolute;
  z-index: 101;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}
.gashapon .gashpon-content {
  position: relative;
  z-index: 102;
  width: 100%;
}
.gashapon .gashpon-content .gashapon-middle {
  margin: 0 auto;
  width: 670rpx;
}
.gashapon .gashpon-content .gashapon-middle .machine {
  width: 500rpx;
  height: 500rpx;
  margin: 0 auto;
  margin-top: calc(50vh - 322rpx);
}
.gashapon .gashpon-content .gashapon-middle .result {
  width: 100%;
  height: 790rpx;
  position: relative;
  margin-top: calc(50vh - 467rpx);
  padding: 90rpx 85rpx 0;
}
.gashapon .gashpon-content .gashapon-middle .result .resultbg {
  position: absolute;
  top: 0;
  left: -10rpx;
  z-index: -1;
}
.gashapon .gashpon-content .gashapon-middle .result .result-title {
  font-size: 32rpx;
  line-height: 44rpx;
  color: #fff;
  font-weight: bold;
  -webkit-text-stroke: 2rpx #9D5F61;
  text-shadow: 1rpx 1rpx 1rpx #9D5F61;
}
.gashapon .gashpon-content .gashapon-middle .result .result-title .title-amount {
  float: right;
}
.gashapon .gashpon-content .gashapon-middle .result .result-img {
  width: 500rpx;
  height: 500rpx;
  border-radius: 10rpx;
  overflow: hidden;
  margin-top: 30rpx;
  position: relative;
}
.gashapon .gashpon-content .gashapon-middle .result .result-img .result-type {
  position: absolute;
  width: 55rpx;
  height: 55rpx;
  left: 0;
  top: 0;
  background-color: #020202;
  color: #F9B002;
  font-size: 34rpx;
  line-height: 55rpx;
  border-radius: 10rpx;
}
.gashapon .gashpon-content .gashapon-middle .result .result-name {
  font-size: 30rpx;
  margin-top: 10rpx;
  line-height: 42rpx;
  color: #020202;
  padding-left: 30rpx;
}
.gashapon .gashpon-content .gashapon-bottom {
  margin: 30rpx auto 0;
  width: 286rpx;
  height: 114rpx;
  background: url(https://xcxcs.obs.cn-east-3.myhuaweicloud.com/images/gashapon/button.png) no-repeat;
  background-size: contain;
  font-size: 32rpx;
  line-height: 114rpx;
  color: #fff;
  font-weight: bold;
  -webkit-text-stroke: 2rpx #9D5F61;
  text-shadow: 1rpx 1rpx 1rpx #9D5F61;
  position: relative;
}
.gashapon .gashpon-content .skip {
  position: absolute;
  bottom: 0;
  right: 100rpx;
  line-height: 114rpx;
  font-size: 32rpx;
  color: #fff;
  font-weight: bold;
  -webkit-text-stroke: 2rpx #9D5F61;
  text-shadow: 1rpx 1rpx 1rpx #9D5F61;
}