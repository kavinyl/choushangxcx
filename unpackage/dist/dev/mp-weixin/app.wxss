.content {
  width: 100%;
}
.logo {
  height: 200rpx;
  width: 200rpx;
  margin-top: 200rpx;
  margin-left: auto;
  margin-right: auto;
  margin-bottom: 50rpx;
}
.text-area {
  display: flex;
  justify-content: center;
}
.title {
  font-size: 36rpx;
  color: #8f8f94;
}
.container {
  width: 100%;
  padding: 0 30rpx;
}
.search-area {
  width: 100%;
  margin: 5rpx auto 20rpx;
  height: 68rpx;
  border-radius: 34rpx;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
}
.search-area .search-icon {
  content: url(https://xcxcs.obs.cn-east-3.myhuaweicloud.com/images/search.png);
  width: 40rpx;
  height: 40rpx;
  margin: 0 10rpx 0 30rpx;
}
.search-area .search-tip {
  font-size: 22rpx;
  color: #AAAAAA;
}
.swiper-area {
  padding: 0 20rpx;
}
.swiper-area .swiper {
  height: 300rpx;
  width: 100%;
}
.swiper-area .swiper .pic {
  width: 100%;
  height: 300rpx;
  border-radius: 25px;
}
.sort-area {
  white-space: nowrap;
  width: 100%;
  margin-top: 45rpx;
}
.sort-area .sort-item {
  width: 20%;
  display: inline-block;
  text-align: center;
}
.sort-area .sort-item img,
.sort-area .sort-item image {
  display: block;
  width: 88rpx;
  height: 88rpx;
  margin: 0 auto 15rpx;
}
.sort-area .sort-item text {
  font-size: 24rpx;
  color: #020202;
}
 .goods-area {
  margin-top: 55rpx;
}

view {
		box-sizing: border-box;
}
.t-l {
		text-align: left;
}
.t-r {
		text-align: right;
}
.t-c {
		text-align: center;
}
img,
	image {
		width: 100%;
		height: 100%;
}
.pic {
		display: block;
}
wx-swiper .wx-swiper-dot {
		border: 2px solid #FCBD5D;
}
 .popup-alert .uni-popup__wrapper {
		background-color: #fff !important;
		border-radius: 20rpx;
		padding: 25rpx 40rpx 50rpx;
		width: 690rpx;
}
