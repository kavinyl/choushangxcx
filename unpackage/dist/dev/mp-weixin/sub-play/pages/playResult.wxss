.resultAll {
  position: relative;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-content: flex-start;
  padding: 30rpx 45rpx;
  width: 750rpx;
  height: 100%;
}
.resultAll .resultAllbg {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: -1;
}
.resultAll .border {
  width: 300rpx;
  height: 410rpx;
}
.resultAll .border .result-img {
  position: relative;
  width: 300rpx;
  height: 300rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.resultAll .border .result-img .result-type {
  position: absolute;
  width: 55rpx;
  height: 55rpx;
  left: 0;
  top: 0;
  background-color: #020202;
  color: #F9B002;
  font-size: 34rpx;
  line-height: 55rpx;
  border-radius: 10rpx;
}
.resultAll .border .result-img .result-amount {
  position: absolute;
  width: 95rpx;
  height: 55rpx;
  right: 0;
  bottom: 0;
  background-color: #020202;
  color: #F9B002;
  font-size: 34rpx;
  line-height: 55rpx;
  border-radius: 10rpx;
}
.resultAll .border .result-name {
  font-size: 30rpx;
  color: #020202;
  line-height: 40rpx;
  margin-top: 5rpx;
}