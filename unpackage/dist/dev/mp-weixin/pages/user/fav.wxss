.goods-area {
  border-bottom: 1rpx solid #F7F7F7;
  padding: 20rpx 0;
  width: 100%;
  position: relative;
}
.goods-sort {
  width: 580rpx;
  height: 40rpx;
}
.select {
  position: absolute;
  top: 50%;
  transform: translateY(-20rpx);
  right: 0;
  width: 170rpx;
  height: 40rpx;
  border-left: 2rpx solid #DCDCDC;
  display: inline-flex;
  align-items: center;
  flex-wrap: nowrap;
  font-size: 28rpx;
  color: #020202;
}
.select .pic {
  width: 19rpx;
  height: 21rpx;
  margin-left: 20rpx;
  margin-right: 10rpx;
}
.select-ing {
  padding-left: 20rpx;
  color: #FF553F;
}
 .segmented-control__text {
  font-size: 26rpx;
}
 .segmented-control {
  width: 580rpx;
}
.fav-list .box {
  width: 690rpx;
  margin: 0 auto;
  position: relative;
}
.fav-list .box .choosen {
  width: 50rpx;
  height: 100%;
  transition: width 0.5s ease;
  position: absolute;
  left: 0;
  top: 0;
  opacity: 0;
  transition: all 0.5s ease;
}
.fav-list .box .choosen .choosen-area {
  width: 80rpx;
  height: 180rpx;
  padding-top: 72rpx;
  margin-bottom: 30rpx;
}
.fav-list .box .choosen .choosen-area .choosen-out {
  width: 35rpx;
  height: 35rpx;
  border: 1rpx solid #FF553F;
  background-color: #FCE7DE;
  border-radius: 20rpx;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  justify-content: center;
}
.fav-list .box .choosen .choosen-area .choosen-in {
  width: 15rpx;
  height: 15rpx;
  background-color: #FF553F;
  border-radius: 20rpx;
}
.fav-list .choosen-a {
  opacity: 1 !important;
}
.fav-list .border-a {
  margin-left: 80rpx !important;
}
.fav-list .border {
  max-width: 690rpx;
  height: 180rpx;
  margin: 30rpx 0 10rpx;
  position: relative;
  transition: all 0.5s ease;
}
.fav-list .border .pic {
  float: left;
  width: 180rpx;
  height: 180rpx;
  margin-right: 15rpx;
}
.fav-list .border .presale {
  position: absolute;
  top: 0;
  left: 0;
  width: 83rpx;
  height: 82rpx;
}
.fav-list .border .fav-title {
  font-size: 30rpx;
  color: #000;
  line-height: 40rpx;
  height: 96rpx;
}
.fav-list .border .fav-price {
  font-size: 30rpx;
  line-height: 42rpx;
  color: #F9B002;
  font-weight: bold;
  position: absolute;
  bottom: 6rpx;
  left: 195rpx;
}
.fav-list .border .fav-soldout {
  font-size: 22rpx;
  color: #929191;
  width: 114rpx;
  height: 42rpx;
  background-color: #EEEEEE;
  position: absolute;
  line-height: 42rpx;
  border-radius: 21rpx;
  right: 0;
  bottom: 6rpx;
}
.control {
  position: fixed;
  bottom: 0;
  left: 0;
  border-top: 1rpx solid #FAFAFA;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  width: 100%;
  height: 90rpx;
}
.control .control-left {
  display: inline-flex;
  align-items: center;
}
.control .control-left .circle-out {
  width: 35rpx;
  height: 35rpx;
  border: 1rpx solid #FF553F;
  background-color: #FCE7DE;
  border-radius: 50%;
  position: relative;
  margin-right: 5rpx;
}
.control .control-left .circle-out .circle-in {
  position: absolute;
  width: 15rpx;
  height: 15rpx;
  background-color: #FF553F;
  border-radius: 50%;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
.control .control-left .txt {
  font-size: 22rpx;
  color: #9C9C9C;
  line-height: 35rpx;
}
.control .control-center {
  flex: 1;
  color: #7B7B7B;
  font-size: 24rpx;
  letter-spacing: 2px;
  margin-right: 30rpx;
}
.control .control-center .txt {
  font-size: 30rpx;
  color: #020202;
  font-weight: bold;
}
.control .control-right {
  width: 160rpx;
  height: 68rpx;
  display: flex;
  justify-content: center;
  flex-wrap: nowrap;
  align-items: center;
  background-color: #FCE7DE;
  border-radius: 34rpx;
}
.control .control-right .pic {
  width: 26rpx;
  height: 26rpx;
  margin-right: 10rpx;
}
.control .control-right .txt {
  font-size: 22rpx;
  color: #FF553F;
}