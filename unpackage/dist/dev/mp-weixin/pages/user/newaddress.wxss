.form .border {
  width: 100%;
  height: 120rpx;
  border-bottom: 1rpx solid #D2D2D2;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  padding: 0 30rpx;
}
.form .border .title {
  width: 150rpx;
  font-size: 26rpx;
  color: #020202;
  height: 40rpx;
  line-height: 40rpx;
}
.form .border .input {
  font-size: 26rpx;
  color: #020202;
  width: 550rpx;
  height: 40rpx;
}
.form .address-detail {
  height: 200rpx;
  align-items: flex-start;
  padding-top: 45rpx;
}
.form .address-detail .input {
  height: 100rpx;
  line-height: 40rpx;
}
.form .city {
  flex: 1;
}
.form .set-default .title {
  flex: 1;
}
.form .set-default .btn {
  width: 46rpx;
  height: 46rpx;
  border-radius: 10rpx;
  background-color: #FDF3DE;
  border: 1rpx solid #F9B002;
  position: relative;
}
.form .set-default .btn .pic {
  width: 32rpx;
  height: 23rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
 .placeholder, .uni-scroll-view-content {
  font-size: 26rpx !important;
}
 .input-value {
  height: 40rpx !important;
  padding: 0 !important;
}
 .input-value-border {
  border: 0 !important;
}
 .input-arrow {
  width: 14rpx;
  height: 14rpx;
}
 .dialog-title {
  font-size: 28rpx;
}
.bottom {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  border-top: 1rpx solid #F7F7F7;
  background-color: #fff;
}
.bottom .btn {
  margin: 16rpx auto;
  width: 340rpx;
  height: 68rpx;
  color: #fff;
  border-radius: 34rpx;
  line-height: 68rpx;
  background-color: #F9B002;
  font-size: 26rpx;
}
.bottom .del {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 26rpx;
  color: #5E5E5E;
  line-height: 30rpx;
}
.bottom .del .pic {
  width: 30rpx;
  height: 30rpx;
  float: left;
  margin-right: 10rpx;
}