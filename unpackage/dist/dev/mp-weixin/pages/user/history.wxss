.head {
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-content: center;
  padding: 20rpx 70rpx 20rpx;
  height: 60rpx;
  box-shadow: 0 5rpx 5rpx rgba(0, 0, 0, 0.05);
}
.head .all-category,
.head .time-in,
.head .select {
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  justify-content: center;
}
.head .all-category .txt,
.head .time-in .txt,
.head .select .txt {
  white-space: nowrap;
  font-size: 26rpx;
  color: #020202;
}
.head .all-category .pic {
  width: 12rpx;
  height: 6rpx;
  margin-left: 10rpx;
}
.head .time-in .pic {
  width: 12rpx;
  height: 16rpx;
  margin-left: 10rpx;
}
.head .time-in .pic_2 {
  height: 6rpx !important;
}
.head .select .line {
  border-left: 2rpx solid #DCDCDC;
  width: 0;
  height: 40rpx;
}
.head .select .pic {
  width: 19rpx;
  height: 21rpx;
  margin-left: 20rpx;
  margin-right: 11rpx;
}
.head .select .selecting {
  color: #FF553F;
}
.allClass .class-one, .allClass .class-two {
  margin: 30rpx auto 40rpx;
  width: 440rpx;
  height: 80rpx;
  border: 1rpx solid #F9B002;
  background-color: #FDF5E2;
  font-size: 26rpx;
  color: #020202;
  line-height: 78rpx;
  border-radius: 10rpx;
  position: relative;
}
.allClass .class-all {
  margin-top: 0;
}
.allClass .list {
  padding-bottom: 100rpx;
}
.allClass .list .class-one, .allClass .list .class-two {
  margin-top: 0;
  margin-bottom: 20rpx;
}
.allClass .border1 {
  margin-bottom: 40rpx;
  overflow: hidden;
  transition: max-height 0.5s ease;
  transition-delay: 0;
  max-height: 80rpx;
}
.allClass .border2 {
  overflow: hidden;
  transition: max-height 0.5s ease;
  transition-delay: 0;
  margin-bottom: 20rpx;
  max-height: 80rpx;
}
.allClass .border2:last-child {
  margin-bottom: 0 !important;
}
.allClass .active {
  background-color: #F9B002 !important;
  color: #fff;
}
.allClass .act {
  height: 100%;
}
.allClass .class-two {
  margin-bottom: 0 !important;
  background-color: #fff;
}
.allClass .tri {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-5rpx);
  width: 0;
  height: 0;
  border: 10rpx solid transparent;
}
.allClass .tri-b {
  border-top-color: #020202;
}
.allClass .tri-w {
  border-bottom-color: #fff;
  transform: translateY(-15rpx);
}
.allClass .submit {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 500rpx;
  height: 100rpx;
  border-top: 1rpx solid #F7F7F7;
  background-color: #fff;
}
.allClass .submit .btn {
  width: 340rpx;
  height: 68rpx;
  line-height: 68rpx;
  background-color: #F9B002;
  color: #fff;
  border-radius: 34rpx;
  font-size: 26rpx;
  margin: 16rpx auto;
}
 .uni-searchbar__box {
  height: 60rpx !important;
}
 .uni-searchbar__cancel {
  line-height: 60rpx !important;
}
.order-list {
  padding: 0 20rpx;
}
.order-list .total {
  margin: 15rpx 0 20rpx;
  font-size: 22rpx;
  color: #595858;
}
.order-list .total .times {
  margin-right: 60rpx;
}
.order-list .border {
  width: 100%;
  height: 360rpx;
  background-color: #F7F7F7;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
}
.order-list .border .order-id {
  font-size: 28rpx;
  height: 60rpx;
  border-bottom: 1rpx solid #BFBFBF;
}
.order-list .border .tr {
  width: 100%;
  height: 36rpx;
  margin: 20rpx 0 30rpx;
}
.order-list .border .tr .title {
  font-size: 26rpx;
  color: #595858;
  line-height: 36rpx;
  margin-right: 50rpx;
}
.order-list .border .tr .detail {
  font-size: 26rpx;
  color: #000;
  line-height: 36rpx;
}