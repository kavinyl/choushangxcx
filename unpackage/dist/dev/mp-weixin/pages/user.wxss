.user {
  min-height: 1000rpx;
}
.user-info {
  padding: 25rpx 50rpx 30rpx;
  width: 100%;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
}
.user-info .pic {
  width: 120rpx;
  height: 120rpx;
  margin-right: 30rpx;
  border-radius: 50%;
}
.user-info .user-name {
  font-size: 32rpx;
  color: #000;
}
.login .pic {
  width: 80rpx;
  height: 80rpx;
}
.login-btn {
  margin-left: 0;
  width: 300rpx;
  height: 56rpx;
  font-size: 22rpx;
  line-height: 56rpx;
}
.nav {
  width: 100%;
  padding: 0 60rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.nav .nav-item {
  width: 290rpx;
  height: 78rpx;
  border: 1rpx solid #FAC74B;
  border-radius: 15rpx;
  background-color: #FCF5E3;
  margin-bottom: 30rpx;
  text-align: center;
  padding: 14rpx;
}
.nav .nav-item .pic {
  width: 48rpx;
  height: 48rpx;
  display: inline-block;
  vertical-align: bottom;
  margin-right: 10rpx;
}
.nav .nav-item .txt {
  font-size: 26rpx;
  line-height: 48rpx;
  color: #000;
  display: inline-block;
}
.adbanner {
  margin: 0 auto 20rpx;
  width: 690rpx;
  height: 120rpx;
}
.cards {
  width: 690rpx;
  height: 108rpx;
  background-color: #fff;
  box-shadow: 0rpx 0rpx 10rpx rgba(0, 0, 0, 0.2);
  margin: 20rpx auto;
  border-radius: 15rpx;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  justify-content: space-between;
  padding: 0 25rpx 0 40rpx;
}
.cards .cards-txt {
  flex: 1;
  margin-left: 20rpx;
  font-size: 26rpx;
  color: #000;
}
.cards .cards-txt .btn {
  background-color: transparent;
  color: inherit;
  font-size: inherit;
  border: none;
  padding: 0;
}
.cards .cards-txt .btn:after {
  display: none;
}
.cards .cards-left {
  width: 32rpx;
  height: 32rpx;
}
.cards .cards-arrow {
  width: 10rpx;
  height: 18rpx;
}