.confirm-top {
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  margin: 30rpx 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #E5E5E5;
}
.confirm-top .img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  overflow: hidden;
  margin-right: 20rpx;
}
.confirm-top .info {
  flex: 1;
}
.confirm-top .info .name {
  font-size: 30rpx;
  color: #020202;
  line-height: 1;
}
.confirm-top .info .class {
  font-size: 24rpx;
  color: #807F7F;
  margin-top: 10rpx;
  line-height: 1;
}
.confirm-top .info .amount {
  margin-top: 25rpx;
  font-size: 22rpx;
  color: #595858;
  line-height: 1;
}
.confirm-top .price {
  font-size: 30rpx;
  color: #FE0101;
}
.title {
  width: 140rpx;
  font-size: 26rpx;
  color: #020202;
  line-height: 40rpx;
}
.seller {
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  padding: 0 30rpx;
  height: 80rpx;
}
.seller .detail .pic {
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  display: inline-block;
  vertical-align: bottom;
  margin-right: 10rpx;
}
.seller .detail .txt {
  font-size: 24rpx;
  color: #595858;
  line-height: 40rpx;
}
.rules {
  display: flex;
  flex-wrap: nowrap;
  padding: 0 30rpx 30rpx;
}
.rules .text {
  font-size: 26rpx;
  line-height: 40rpx;
  flex: 1;
}
.rules .text .p {
  margin-bottom: 10rpx;
}
.pay-type {
  border-top: 1rpx solid #E5E5E5;
  margin: 0 30rpx;
  padding: 30rpx 0 100rpx;
}
.pay-type .title {
  margin-bottom: 30rpx;
}
.pay-type .pay-type-item {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
}
.pay-type .pay-type-item .pay-icon {
  width: 32rpx;
  height: 32rpx;
}
.pay-type .pay-type-item .txt {
  flex: 1;
  margin-left: 15rpx;
  margin-right: 30rpx;
  font-size: 24rpx;
  color: #020202;
}
.pay-type .pay-type-item .choose {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  border: 1rpx solid #FDB302;
  background-color: #FDF5E2;
  position: relative;
  overflow: hidden;
}
.pay-type .pay-type-item .choose .active {
  position: absolute;
  top: 0%;
  left: 0%;
  width: 100%;
  height: 100%;
  background-color: #FDB302;
}
.pay-type .pay-type-item .choose .active .pic {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 16rpx;
  height: 11rpx;
  transform: translate(-50%, -50%);
}
.bottom {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  border-top: 1rpx solid #F7F7F7;
  background-color: #fff;
}
.bottom .btn {
  margin: 16rpx auto;
  width: 340rpx;
  height: 68rpx;
  color: #fff;
  border-radius: 34rpx;
  line-height: 68rpx;
  background-color: #F9B002;
  font-size: 26rpx;
}