.deal-list {
  padding: 0 20rpx;
  width: 100%;
  margin-top: 10rpx;
  display: flex;
  flex-wrap: wrap;
}
.deal-list .title {
  font-size: 26rpx;
  color: #020202;
  line-height: 60rpx;
  width: 100%;
  padding-left: 10rpx;
}
.deal-list .border {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin: 10rpx;
}
.wishlist {
  width: 100%;
  background-color: #FEFCF6;
  padding: 30rpx;
  position: relative;
  margin-top: 15rpx;
}
.wishlist .wishlist-title {
  font-size: 26rpx;
  color: #020202;
  line-height: 46rpx;
}
.wishlist .wishlist-switch {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  width: 46rpx;
  height: 46rpx;
  background-color: #FDF3DE;
  border: 1rpx solid #F9B002;
  border-radius: 10rpx;
}
.wishlist .wishlist-switch .pic {
  width: 22rpx;
  height: 18rpx;
  margin: 13rpx auto;
}
.wishlist .wishlist-form .wish-goods {
  margin: 15rpx -10rpx 0;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}
.wishlist .wishlist-form .wish-goods .border,
.wishlist .wishlist-form .wish-goods .add {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  background-color: #FDF3DE;
  margin: 10rpx;
}
.wishlist .wishlist-form .wish-goods .add .pic {
  margin: 39rpx auto;
  width: 42rpx;
  height: 42rpx;
}
.form-item {
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  width: 100%;
  align-items: center;
  margin-top: 20rpx;
}
.form-item .txt {
  font-size: 26rpx;
  color: #020202;
}
.form-item .input {
  background-color: #FDF3DE;
  width: 515rpx;
  height: 90rpx;
  border-radius: 10rpx;
  margin-right: 55rpx;
  padding: 0 20rpx;
  font-size: 32rpx;
  color: #020202;
  box-sizing: border-box;
}
 .input-default {
  font-size: 24rpx;
  color: #897862;
}
.sell-price {
  padding: 0 30rpx 100rpx;
}
.sell-price .message .txt {
  align-self: flex-start;
  margin-top: 25rpx;
  line-height: 35rpx;
}
.sell-price .textarea {
  width: 515rpx;
  height: 190rpx;
  padding: 25rpx 20rpx;
  margin-right: 55rpx;
  background-color: #FDF3DE;
  box-sizing: border-box;
  border-radius: 10rpx;
  line-height: 35rpx;
  margin-bottom: 20rpx;
  font-size: 32rpx;
  color: #020202;
}
.publish-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  border-top: 1rpx solid #F7F7F7;
  background-color: #fff;
}
.publish-bottom .submit {
  margin: 16rpx auto;
  width: 340rpx;
  height: 68rpx;
  border-radius: 34rpx;
  font-size: 26rpx;
  color: #fff;
  line-height: 68rpx;
  background-color: #F9B002;
}
.publish-bottom .submit:after {
  display: none;
}
.publish-bottom .reset {
  position: absolute;
  right: 30rpx;
  top: 16rpx;
  background-color: transparent;
  font-size: 26rpx;
  color: #5E5E5E;
  line-height: 68rpx;
}
.publish-bottom .reset:after {
  display: none;
}