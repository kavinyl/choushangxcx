.head {
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-content: center;
  padding: 20rpx 70rpx 0;
  height: 60rpx;
}
.head .all-category,
.head .time-in,
.head .select {
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  justify-content: center;
}
.head .all-category .txt,
.head .time-in .txt,
.head .select .txt {
  white-space: nowrap;
  font-size: 26rpx;
  color: #020202;
}
.head .all-category .pic {
  width: 12rpx;
  height: 6rpx;
  margin-left: 10rpx;
}
.head .time-in .pic {
  width: 12rpx;
  height: 16rpx;
  margin-left: 10rpx;
}
.head .time-in .pic_2 {
  height: 6rpx !important;
}
.head .select .line {
  border-left: 2rpx solid #DCDCDC;
  width: 0;
  height: 40rpx;
}
.head .select .pic {
  width: 19rpx;
  height: 21rpx;
  margin-left: 20rpx;
  margin-right: 11rpx;
}
.head .select .selecting {
  color: #FF553F;
}
.allPros .class-one, .allPros .class-two, .allPros .class-three {
  margin: 30rpx auto 40rpx;
  width: 440rpx;
  height: 80rpx;
  border: 1rpx solid #F9B002;
  background-color: #FDF5E2;
  font-size: 26rpx;
  color: #020202;
  line-height: 78rpx;
  border-radius: 10rpx;
  position: relative;
}
.allPros .list {
  padding-bottom: 100rpx;
}
.allPros .list .class-one, .allPros .list .class-two, .allPros .list .class-three {
  margin-top: 0;
  margin-bottom: 20rpx;
}
.allPros .border1 {
  margin-bottom: 40rpx;
  overflow: hidden;
  transition: max-height 0.5s ease;
  transition-delay: 0;
  max-height: 80rpx;
}
.allPros .border2 {
  overflow: hidden;
  transition: max-height 0.5s ease;
  transition-delay: 0;
  margin-bottom: 20rpx;
  max-height: 80rpx;
}
.allPros .border2:last-child {
  margin-bottom: 0 !important;
}
.allPros .border3 {
  margin-top: 20rpx;
}
.allPros .border3:last-child {
  margin-bottom: 0 !important;
}
.allPros .active {
  background-color: #F9B002 !important;
  color: #fff;
}
.allPros .act {
  height: 100%;
}
.allPros .class-two, .allPros .class-three {
  margin-bottom: 0 !important;
  background-color: #fff;
}
.allPros .class-three {
  margin-bottom: 0 !important;
  width: 400rpx;
  transform: translateX(20rpx);
}
.allPros .tri {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-5rpx);
  width: 0;
  height: 0;
  border: 10rpx solid transparent;
}
.allPros .tri-b {
  border-top-color: #020202;
}
.allPros .tri-w {
  border-bottom-color: #fff;
  transform: translateY(-15rpx);
}
.allPros .submit {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 500rpx;
  height: 100rpx;
  border-top: 1rpx solid #F7F7F7;
  background-color: #fff;
}
.allPros .submit .btn {
  width: 340rpx;
  height: 68rpx;
  line-height: 68rpx;
  background-color: #F9B002;
  color: #fff;
  border-radius: 34rpx;
  font-size: 26rpx;
  margin: 16rpx auto;
}
.bag-list {
  padding: 20rpx 35rpx 80rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;
}
.bag-list .border {
  width: 160rpx;
  height: 220rpx;
  margin: 0 5rpx;
  position: relative;
  border-radius: 10rpx;
  overflow: hidden;
}
.bag-list .border .pic {
  height: 160rpx;
}
.bag-list .border .type {
  position: absolute;
  top: 0;
  left: 0;
  width: 54rpx;
  height: 54rpx;
  background-color: #020202;
  border-radius: 10rpx;
  color: #F9B002;
  font-size: 34rpx;
  line-height: 54rpx;
  font-weight: bold;
}
.bag-list .border .name {
  font-size: 22rpx;
  color: #636363;
  line-height: 44rpx;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.bag-list .border .choosen {
  width: 160rpx;
  height: 160rpx;
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
}
.bag-list .border .choosen .pic_choose {
  position: absolute;
  width: 46rpx;
  height: 32rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.bag-list .border .dealing {
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
  font-size: 34rpx;
  color: #fff;
  line-height: 160rpx;
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
}
.control {
  position: fixed;
  bottom: 0;
  left: 0;
  border-top: 1rpx solid #FAFAFA;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
}
.control .control-left {
  display: inline-flex;
  align-items: center;
}
.control .control-left .circle-out {
  width: 35rpx;
  height: 35rpx;
  border: 1rpx solid #FF553F;
  background-color: #FCE7DE;
  border-radius: 50%;
  position: relative;
  margin-right: 5rpx;
}
.control .control-left .circle-out .circle-in {
  position: absolute;
  width: 15rpx;
  height: 15rpx;
  background-color: #FF553F;
  border-radius: 50%;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
.control .control-left .txt {
  font-size: 22rpx;
  color: #9C9C9C;
  line-height: 35rpx;
}
.control .control-right {
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
}
.control .control-right .btn {
  width: 160rpx;
  height: 68rpx;
  line-height: 68rpx;
  border-radius: 34rpx;
  background-color: #FCE7DE;
  font-size: 22rpx;
  color: #FF553F;
  margin-left: 15rpx;
}